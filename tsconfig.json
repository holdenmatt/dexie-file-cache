{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "jest.setup.js"],
  "exclude": ["node_modules"]
}
